CREATE TABLE "DIM_PRODUTOS"(
    "ID_PRODUTO" INTEGER NOT NULL,
    "CATEGORIA_PRODUTO" VARCHAR(255) NOT NULL,
    "NOME_PRODUTO" VARCHAR(255) NOT NULL,
    "QTD_ESTOQUE" INTEGER NOT NULL,
    "PREÇO_UNITÁRIO" FLOAT(53) NOT NULL
);
ALTER TABLE
    "DIM_PRODUTOS" ADD PRIMARY KEY("ID_PRODUTO");
CREATE TABLE "DIM_ENDEREÇO"(
    "ID_ENDEREÇO" INTEGER NOT NULL,
    "CIDADE_CLIENTE" VARCHAR(255) NOT NULL,
    "ESTADO_CLIENTE" VARCHAR(255) NOT NULL
);
ALTER TABLE
    "DIM_ENDEREÇO" ADD PRIMARY KEY("ID_ENDEREÇO");
CREATE TABLE "DIM_DATA"(
    "ID_DATA" INTEGER NOT NULL,
    "ANO" INTEGER NOT NULL,
    "SEMESTRE" VARCHAR(25) NOT NULL,
    "TRIMESTRE" VARCHAR(25) NOT NULL,
    "MÊS" VARCHAR(25) NOT NULL,
    "DIA" INTEGER NOT NULL,
    "FERIADO" VARCHAR(5) NOT NULL
);
ALTER TABLE
    "DIM_DATA" ADD PRIMARY KEY("ID_DATA");
CREATE TABLE "DIM_CLIENTES"(
    "ID_CLIENTE" INTEGER NOT NULL,
    "NOME_CLIENTE" VARCHAR(255) NOT NULL,
    "ID_ENDEREÇO" INTEGER NOT NULL,
    "SEXO_CLIENTE" VARCHAR(255) NOT NULL,
    "IDADE_CLIENTE" INTEGER NOT NULL,
    "ESTADO_CIVIL" VARCHAR(255) NOT NULL,
    "EMAIL_CLIENTE" VARCHAR(255) NOT NULL,
    "TELEFONE_CLIENTE" VARCHAR(255) NOT NULL,
    "QTD_FILHOS" INTEGER NOT NULL
);
ALTER TABLE
    "DIM_CLIENTES" ADD PRIMARY KEY("ID_CLIENTE");
CREATE TABLE "DIM_VENDEDORES"(
    "ID_VENDEDOR" INTEGER NOT NULL,
    "NOME_VENDEDOR" VARCHAR(255) NOT NULL,
    "IDADE_VENDEDOR" INTEGER NOT NULL,
    "QTD_VENDIDA" INTEGER NOT NULL,
    "VALOR_VENDIDO" FLOAT(53) NOT NULL
);
ALTER TABLE
    "DIM_VENDEDORES" ADD PRIMARY KEY("ID_VENDEDOR");
CREATE TABLE "FT_VENDAS"(
    "ID_VENDA" INTEGER NOT NULL,
    "ID_PRODUTO" INTEGER NOT NULL,
    "ID_VENDEDOR" INTEGER NOT NULL,
    "ID_DATA" INTEGER NOT NULL,
    "ID_CLIENTE" INTEGER NOT NULL,
    "QTD_VENDIDA" INTEGER NOT NULL,
    "CANAL_VENDA" VARCHAR(255) NOT NULL,
    "FORMA_PAGAMENTO" VARCHAR(255) NOT NULL
);
ALTER TABLE
    "FT_VENDAS" ADD PRIMARY KEY("ID_VENDA");
ALTER TABLE
    "FT_VENDAS" ADD CONSTRAINT "ft_vendas_id_produto_foreign" FOREIGN KEY("ID_PRODUTO") REFERENCES "DIM_PRODUTOS"("ID_PRODUTO");
ALTER TABLE
    "DIM_CLIENTES" ADD CONSTRAINT "dim_clientes_id_endereÇo_foreign" FOREIGN KEY("ID_ENDEREÇO") REFERENCES "DIM_ENDEREÇO"("ID_ENDEREÇO");
ALTER TABLE
    "FT_VENDAS" ADD CONSTRAINT "ft_vendas_id_data_foreign" FOREIGN KEY("ID_DATA") REFERENCES "DIM_DATA"("ID_DATA");
ALTER TABLE
    "FT_VENDAS" ADD CONSTRAINT "ft_vendas_id_vendedor_foreign" FOREIGN KEY("ID_VENDEDOR") REFERENCES "DIM_VENDEDORES"("ID_VENDEDOR");
ALTER TABLE
    "FT_VENDAS" ADD CONSTRAINT "ft_vendas_id_cliente_foreign" FOREIGN KEY("ID_CLIENTE") REFERENCES "DIM_CLIENTES"("ID_CLIENTE");
